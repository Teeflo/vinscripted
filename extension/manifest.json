{
  "manifest_version": 3,
  "name": "Vinscripted",
  "version": "1.0.1",
  "description": "Génère automatiquement des descriptions optimisées pour vos annonces Vinted",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.vinted.fr/*",
    "https://www.vinted.be/*",
    "https://www.vinted.es/*",
    "https://www.vinted.de/*",
    "https://www.vinted.it/*",
    "https://www.vinted.nl/*",
    "https://www.vinted.pl/*",
    "https://www.vinted.pt/*",
    "https://www.vinted.co.uk/*",
    "https://www.vinted.com/*",
    "https://backend-teeflo.vercel.app/*",
    "https://*.vercel.app/*",
    "https://images.vinted.net/*",
    "https://images1.vinted.net/*",
    "https://*.vinted.net/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.vinted.fr/items/new*",
        "https://www.vinted.fr/member/items/new*",
        "https://www.vinted.fr/items/*/edit*",
        "https://www.vinted.be/items/new*",
        "https://www.vinted.be/member/items/new*",
        "https://www.vinted.be/items/*/edit*",
        "https://www.vinted.es/items/new*",
        "https://www.vinted.es/member/items/new*",
        "https://www.vinted.es/items/*/edit*",
        "https://www.vinted.de/items/new*",
        "https://www.vinted.de/member/items/new*",
        "https://www.vinted.de/items/*/edit*",
        "https://www.vinted.it/items/new*",
        "https://www.vinted.it/member/items/new*",
        "https://www.vinted.it/items/*/edit*",
        "https://www.vinted.nl/items/new*",
        "https://www.vinted.nl/member/items/new*",
        "https://www.vinted.nl/items/*/edit*",
        "https://www.vinted.pl/items/new*",
        "https://www.vinted.pl/member/items/new*",
        "https://www.vinted.pl/items/*/edit*",
        "https://www.vinted.pt/items/new*",
        "https://www.vinted.pt/member/items/new*",
        "https://www.vinted.pt/items/*/edit*",
        "https://www.vinted.co.uk/items/new*",
        "https://www.vinted.co.uk/member/items/new*",
        "https://www.vinted.co.uk/items/*/edit*",
        "https://www.vinted.com/items/new*",
        "https://www.vinted.com/member/items/new*",
        "https://www.vinted.com/items/*/edit*"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*"
      ],
      "matches": [
        "https://www.vinted.fr/*",
        "https://www.vinted.be/*",
        "https://www.vinted.es/*",
        "https://www.vinted.de/*",
        "https://www.vinted.it/*",
        "https://www.vinted.nl/*",
        "https://www.vinted.pl/*",
        "https://www.vinted.pt/*",
        "https://www.vinted.co.uk/*",
        "https://www.vinted.com/*"
      ]
    }
  ]
}